# ========================================
# Admin Frontend Environment Variables
# ========================================

# ========================================
# API Configuration
# ========================================

# Backend API URL (used by api.ts service)
# Default: http://localhost:8080/api
VITE_API_URL=http://localhost:8080

# API Base URL for REST endpoints
# This is used in the API service for making HTTP requests
VITE_API_BASE_URL=http://localhost:8080/api

# ========================================
# WebSocket Configuration
# ========================================

# WebSocket URL (used by websocket.ts service)
# Default: ws://localhost:8080 (derived from VITE_API_URL)
# The WebSocket service automatically converts http to ws
VITE_WS_URL=ws://localhost:8080

# WebSocket Path
# Default: /api/v1/ws/connect
VITE_WS_PATH=/api/v1/ws/connect

# ========================================
# Application Configuration
# ========================================

# Application Name
VITE_APP_NAME=Admin Dashboard

# Application Version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_NODE_ENV=development

# ========================================
# Authentication Configuration
# ========================================

# JWT Token Storage Key
# Default: authToken (used in localStorage)
VITE_AUTH_TOKEN_KEY=authToken

# Refresh Token Storage Key
# Default: refreshToken (used in localStorage)
VITE_REFRESH_TOKEN_KEY=refreshToken

# Token Expiration Warning (in minutes)
# Default: 5 minutes before token expires
VITE_TOKEN_EXPIRY_WARNING=5

# ========================================
# Feature Flags
# ========================================

# Enable/Disable WebSocket connections
# Default: true
VITE_ENABLE_WEBSOCKET=true

# Enable/Disable Real-time notifications
# Default: true
VITE_ENABLE_REALTIME_NOTIFICATIONS=true

# Enable/Disable Analytics
# Default: false
VITE_ENABLE_ANALYTICS=false

# Enable/Disable Debug Mode
# Default: false (set to true for development)
VITE_DEBUG_MODE=false

# ========================================
# UI Configuration
# ========================================

# Default Theme (light, dark, auto)
# Default: auto
VITE_DEFAULT_THEME=auto

# Default Language
# Default: en
VITE_DEFAULT_LANGUAGE=en

# Enable/Disable Animations
# Default: true
VITE_ENABLE_ANIMATIONS=true

# ========================================
# Development Configuration
# ========================================

# Development Server Port
# Default: 3000 (configured in vite.config.ts)
VITE_DEV_SERVER_PORT=3000

# Enable/Disable Source Maps
# Default: true (configured in vite.config.ts)
VITE_SOURCE_MAP=true

# ========================================
# External Services (Optional)
# ========================================

# Google Analytics ID (if using GA)
# VITE_GA_TRACKING_ID=

# Sentry DSN (if using Sentry for error tracking)
# VITE_SENTRY_DSN=

# ========================================
# Security Configuration
# ========================================

# Content Security Policy
# VITE_CSP_NONCE=

# ========================================
# Performance Configuration
# ========================================

# Enable/Disable Service Worker
# Default: false
VITE_ENABLE_SERVICE_WORKER=false

# Cache Duration (in seconds)
# Default: 3600 (1 hour)
VITE_CACHE_DURATION=3600

# ========================================
# Notification Configuration
# ========================================

# Default notification duration (in milliseconds)
# Default: 5000 (5 seconds)
VITE_NOTIFICATION_DURATION=5000

# Maximum notifications to show at once
# Default: 5
VITE_MAX_NOTIFICATIONS=5

# ========================================
# API Rate Limiting
# ========================================

# API Request timeout (in milliseconds)
# Default: 10000 (10 seconds)
VITE_API_TIMEOUT=10000

# Maximum retry attempts for failed requests
# Default: 3
VITE_API_MAX_RETRIES=3

# ========================================
# File Upload Configuration
# ========================================

# Maximum file upload size (in bytes)
# Default: 10485760 (10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for upload
# Default: image/*,application/pdf
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf

# ========================================
# Dashboard Configuration
# ========================================

# Default dashboard refresh interval (in seconds)
# Default: 30
VITE_DASHBOARD_REFRESH_INTERVAL=30

# Enable/Disable auto-refresh on dashboard
# Default: true
VITE_DASHBOARD_AUTO_REFRESH=true

# ========================================
# Logging Configuration
# ========================================

# Log Level (error, warn, info, debug)
# Default: info
VITE_LOG_LEVEL=info

# Enable/Disable console logging
# Default: true in development, false in production
VITE_ENABLE_CONSOLE_LOGS=true 