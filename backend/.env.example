# Sample .env for wordpress-go-next backend

# Database settings
DB_HOST=localhost
DB_TYPE=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_DBNAME=wordpress_go_next
DB_PORT=5432
DB_SSLMODE=disable

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
# Server port
PORT=8080

# JWT/Token settings
JWT_SECRET=your_jwt_secret_here
TOKEN_EXPIRATION=3600

# Casbin config (if needed)
CASBIN_MODEL_PATH=./internal/casbin_model.conf
CASBIN_POLICY_PATH=./internal/casbin_policy.csv

# OSS/Media storage (if used)
# OSS_ACCESS_KEY=your_access_key
# OSS_SECRET_KEY=your_secret_key
# OSS_BUCKET=your_bucket
# OSS_ENDPOINT=your_endpoint
# OSS_REGION=your_region