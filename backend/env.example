# Backend Environment Variables for Local Development with PostgreSQL

# Application Settings
APP_NAME=go-next-backend
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Backend Settings
BACKEND_PORT=8080
GIN_MODE=debug
CORS_ORIGIN=http://localhost:3000

# Database Settings (PostgreSQL for local development)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=go_next
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRATION=24h

# Redis Settings (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Mail Settings (optional - for email functionality)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com

# Docker Network Settings
DOCKER_SUBNET=172.21.0.0/16

# Resource Limits
BACKEND_MEMORY_LIMIT=2G
BACKEND_CPU_LIMIT=1.0
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_CPU_LIMIT=0.5
